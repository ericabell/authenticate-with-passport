<div class="container" style="margin-top: 2rem">
  <div class="row">
    <div class="col">
      {{#user}}
        <h1>
          You are logged in as {{ displayName }}.
          <small><a href="/logout/">Logout</a></small>
          
          <form class="" action="/sendtweet" method="post">
            <label for="tweet">Status:</label>
            <input type="text" name="tweet" value="">

            <input type="submit" name="" value="Tweet!">
          </form>
        </h1>
      {{/user}}
      {{^user}}
      <h1>
        You are not logged in.
        <small><a href="/login/">Login</a> | <a href="/register/">Register</a></small>
      </h1>
      {{/user}}
      <p class="lead">
        <a href="/secret/">Go to secret page.</a>
      </p>
    </div>
  </div>
</div>
